{
  "info": {
    "name": "Absensi API - Auth",
    "_postman_id": "00000000-0000-0000-0000-000000000000",
    "description": "Auth + multi-tenant (company_code, JWT, refresh token, devices).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth / Public",
      "item": [
        {
          "name": "POST Register Company",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_name\": \"PT Contoh Jaya\",\n  \"email\": \"owner@contoh.com\",\n  \"password\": \"Secret123!\",\n  \"phone_number\": \"08123456789\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/register-company",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "register-company"
              ]
            }
          },
          "response": []
        },
        {
          "name": "POST Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (!pm.response.body) { return; }",
                  "try {",
                  "  const json = pm.response.json();",
                  "  const data = json.data || {};",
                  "  if (data.access_token) pm.collectionVariables.set(\"access_token\", data.access_token);",
                  "  if (data.refresh_token) pm.collectionVariables.set(\"refresh_token\", data.refresh_token);",
                  "} catch (e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_code\": \"{{company_code}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "login"
              ]
            }
          },
          "response": []
        },
        {
          "name": "POST Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (!pm.response.body) { return; }",
                  "try {",
                  "  const json = pm.response.json();",
                  "  const data = json.data || {};",
                  "  if (data.access_token) pm.collectionVariables.set(\"access_token\", data.access_token);",
                  "  if (data.refresh_token) pm.collectionVariables.set(\"refresh_token\", data.refresh_token);",
                  "} catch (e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/refresh-token",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "refresh-token"
              ]
            }
          },
          "response": []
        }
      ]
